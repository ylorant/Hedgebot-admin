<div class="card stream-settings-widget">
    <div class="header">
        <h2>{% trans from 'streamcontrol' %}title.streamcontrol{% endtrans %} - {{ settings.channel }}</h2>
    </div>
    {% if info is not empty %}
        <div class="header">
            <form class="stream-settings-form">
                <input type="hidden" name="channel" value="{{ settings.channel }}" />
                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="title" value="{{ info.title }}" />
                        <label class="form-label">{% trans %}form.title{% endtrans %}</label>
                    </div>
                </div>

                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="game" value="{{ info.game_name }}" />
                        <label class="form-label">{% trans %}form.game{% endtrans %}</label>
                    </div>
                </div>

                <button class="btn btn-primary pull-right update-btn">{% trans %}button.update{% endtrans %}</button>
                <button class="btn bg-purple start-ads">{% trans from 'streamcontrol' %}button.ads{% endtrans %}</button>
                <div class="clearfix"></div>
            </form>
        </div>

        <div class="body">
            <form class="stream-settings-actions-form">
                <div class="row">
                    <div class="col-xs-9 p-r-0">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control host-channel-name" type="text" name="host" />
                                <label class="form-label">
                                    {% trans from 'streamcontrol' %}label.host_channel{% endtrans %}
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-3 p-l-0 p-t-10 text-right">
                        <button type="button" class="btn bg-purple waves-effect host-channel-submit">
                            {% trans from 'streamcontrol' %}button.host{% endtrans %}
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-9 p-r-0">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control raid-channel-name" type="text" name="raid" />
                                <label class="form-label">
                                    {% trans from 'streamcontrol' %}label.raid_channel{% endtrans %}
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-3 p-l-0 p-t-10 text-right">
                        <button type="button" class="btn bg-purple waves-effect raid-channel-submit">
                            {% trans from 'streamcontrol' %}button.raid{% endtrans %}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    {% else %}
        <div class="body">
            <p class="text-center">
                <span class="font-italic text-muted">Settings unavailable</span>
            </p>
        </div>
    {% endif %}
</div>
