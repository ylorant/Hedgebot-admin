<div class="card stream-settings-widget">
    <div class="header">
        <h2>Stream settings - {{ settings.channel }}</h2>
    </div>
    {% if info is not empty %}
        <div class="header">
            <form class="stream-settings-form">
                <input type="hidden" name="channel" value="{{ settings.channel }}" />
                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="title" value="{{ info.status }}" />
                        <label class="form-label">Title</label>
                    </div>
                </div>

                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="game" value="{{ info.game }}" />
                        <label class="form-label">Game</label>
                    </div>
                </div>

                <button class="btn btn-primary pull-right update-btn">Update</button>
                <button class="btn bg-purple start-ads">Start 1m30s ads</button>
                <div class="clearfix"></div>
            </form>
        </div>

        <div class="body">
            <form class="stream-settings-actions-form">
                <div class="row">
                    <div class="col-xs-10 p-r-0">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control host-channel-name" type="text" name="host" />
                                <label class="form-label">Host channel</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-2 text-center">
                        <button type="button" class="btn bg-purple waves-effect host-channel-submit">Host</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-10 p-r-0">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control raid-channel-name" type="text" name="raid" />
                                <label class="form-label">Raid channel</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-2 text-center">
                        <button type="button" class="btn bg-purple waves-effect raid-channel-submit">Raid</button>
                    </div>
                </div>
            </form>
        </div>
    {% else %}
        <div class="body">
            <p class="text-center">
                <span class="font-italic text-muted">Settings unavailable</span>
            </p>
        </div>
    {% endif %}
</div>