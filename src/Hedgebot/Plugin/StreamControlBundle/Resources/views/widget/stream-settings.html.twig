<div class="card">
    <div class="header">
        <h2>Stream settings - {{ settings.channel }}</h2>
    </div>
    <div class="body stream-settings-widget">
        {% if info is not empty %}
            <form class="stream-settings-form">
                <input type="hidden" name="channel" value="{{ settings.channel }}" />
                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="title" value="{{ info.status }}" />
                        <label class="form-label">Title</label>
                    </div>
                </div>

                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="form-control" type="text" name="game" value="{{ info.game }}" />
                        <label class="form-label">Game</label>
                    </div>
                </div>

                <button class="btn btn-primary pull-right update-btn">Update</button>
                <button class="btn bg-purple start-ads">Start 1m30s ads</button>
                <div class="clearfix"></div>
            </form>
        {% else %}
            <p class="text-center">
                <span class="font-italic text-muted">Settings unavailable</span>
            </p>
        {% endif %}
    </div>
</div>