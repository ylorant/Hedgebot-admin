{% use 'HedgebotCoreBundle::form/material_form.html.twig' %}

{%- block right_row -%}
    <div class="row right-row">
        <div class="col-xs-2 text-center">
            {{ form_widget(form.children.override) }}
        </div>
        
        <div class="col-xs-8">    
            <label for="{{ form.children.override.vars.id }}">
                {{ form.vars.label }}
            </label>
        </div>
            
        <div class="col-xs-2 text-right">
            {{ form_widget(form.children.grant) }}
        </div>
    </div>
{%- endblock right_row -%}

{%- block _role_users_rest -%}
    <div class="text-right role-collection-add-container">
        <a class="btn btn-primary btn-circle-lg waves-effect" data-action="collection-add">
            <i class="material-icons">add</i>
        </a>
    </div>
{%- endblock _role_users_rest -%}

{%- block _role_users_entry_row -%}
    <div class="form-group form-float {% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}" data-item>
        <div class="input-group">
            <div class="form-line{{ form.vars.disabled ? " disabled" : "" }}">
                {{- form_widget(form) -}}
                {{- form_label(form) -}}
            </div>

            <a href="javascript:void(0);" class="input-group-addon">
                <i class="material-icons" data-action="collection-delete">clear</i>
            </a>
        </div>
        {{- form_errors(form) -}}
    </div>
{%- endblock _role_users_entry_row -%}